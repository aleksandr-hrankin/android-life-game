<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_clear"
            android:contentDescription="@string/btn_img_description" />

        <ImageButton
            android:id="@+id/btn_reload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/btn_clear"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_reload"
            android:contentDescription="@string/btn_img_description" />


        <ImageButton
            android:id="@+id/btn_slower"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/btn_reload"
            android:layout_marginStart="30dp"
            android:background="@drawable/btn_slower"
            android:contentDescription="@string/btn_img_description" />

        <ImageButton
            android:id="@+id/btn_faster"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/btn_slower"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_faster"
            android:contentDescription="@string/btn_img_description" />

        <ImageButton
            android:id="@+id/btn_reduce"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/btn_increase"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_reduce"
            android:contentDescription="@string/btn_img_description" />

        <ImageButton
            android:id="@+id/btn_increase"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_increase"
            android:contentDescription="@string/btn_img_description" />

        <TextView
            android:id="@+id/tw_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_slower"
            android:layout_marginTop="5dp"
            android:layout_marginStart="145dp"
            android:text="SPEED: 100ms"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tw_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_reduce"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="SIZE: 20px"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_playing_field"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/layout_head"/>

    <RelativeLayout
        android:id="@+id/layout_btn_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/tw_gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="GEN: 0"
            android:fontFamily="casual"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tw_gen"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:background="@drawable/btn_prev"
            android:contentDescription="@string/btn_img_description" />

        <ImageButton
            android:id="@+id/btn_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tw_gen"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:background="@drawable/btn_pause"
            android:contentDescription="@string/btn_img_description" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tw_gen"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_play"
            android:contentDescription="@string/btn_img_description" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tw_gen"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"
            android:background="@drawable/btn_next"
            android:contentDescription="@string/btn_img_description" />
    </RelativeLayout>
</RelativeLayout>